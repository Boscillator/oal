{
  "version": 9,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 15
  },
  "configurePresets": [
    {
      "name": "development",
      "displayName": "Development",
      "description": "Defaults for building and testing OAL",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "OAL_BUILD_TESTS": "ON",
        "OAL_PYTHON": "ON",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Werror"
      }
    },
    {
      "name": "ci",
      "displayName": "CI",
      "inherits": "development",
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "development",
      "configurePreset": "development"
    },
    {
      "name": "ci",
      "inherits": "development",
      "configurePreset": "ci"
    }
  ],
  "testPresets": [
    {
      "name": "development",
      "configurePreset": "development",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    }
  ],
  "workflowPresets": [
    {
      "name": "development",
      "steps": [
        {"type": "configure", "name": "development"},
        {"type": "build", "name": "development"},
        {"type": "test", "name": "development"}
      ]
    }
  ]
}